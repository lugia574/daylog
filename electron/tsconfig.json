{
  "compilerOptions": {
    "target": "ES2022",
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "rootDir": ".",
    "outDir": "./out",
    "strict": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "types": ["node"],
    "allowSyntheticDefaultImports": true
  },
  "include": ["**/*.ts"],
  "exclude": ["out", "node_modules"]
}
